type Query {
    messages(count: Int): [Message!]!
    users: [User!]!
}

type Mutation {
    sendMessage(input: MessageInput!): Message!
}

type Message {
    id: ID!
    user: User!
    content: String!
    createdAt: String!
}

type User {
    id: ID!
    vkId: String
    username: String!
    displayName: String
    avatarUrl: String
    createdAt: String!
}

input MessageInput {
    content: String!
}